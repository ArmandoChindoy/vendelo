<h1>Producto:</h1>
<%= image_tag @product.photo, width: 200 if @product.photo.attached? %>
</div>
<div class='product'>
    <h2><%= @product.title %></h2>
    <p><%= @product.description %></p>
    <p><%= @product.price %></p>
</div>
<p><%= link_to 'Volver', products_path %></p>
<p><%= link_to 'Edit product', edit_product_path(@product)%></p>
<p>
    <%= link_to 'Delete product', product_path(@product), data:{
        turbo_method: :delete,
        confirm: 'Are you sure?'
    } %>
</p>

