<h1><%= t('.title') %></h1>
<%= image_tag @product.photo, width: 200 if @product.photo.attached? %>
</div>
<div class='product'>
    <h2><%= @product.title %></h2>
    <p><%= @product.description %></p>
    <p><%= @product.price %></p>
</div>
<p><%= link_to t('common.return'), products_path %></p>
<p><%= link_to t('.edit'), edit_product_path(@product)%></p>
<%= link_to t('.destroy'), product_path(@product), 
    data: { 
      controller: "confirm", 
      action: "click->confirm#confirm", 
      confirm_url: product_path(@product), 
      confirm_action: "replace" 
    } 
%>

<dialog data-controller='confirm' data-confirm-target="dialog">
  <%t('common.confirm')%>
  <menu>
    <button data-action="confirm#proceed"><%t('common.yes')%></button>
    <button data-action="confirm#cancel"><%t('common.no')%></button>
  </menu>
</dialog>

